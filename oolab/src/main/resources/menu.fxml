<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            minHeight="100.0" minWidth="500.0"
            fx:controller="agh.ics.oop.presenter.MenuPresenter">
    <center>
        <HBox>
            <VBox spacing="10">
                <HBox spacing="10">
                    <Label text="Movement List:"/>
                    <TextField fx:id="moves" promptText="Enter movements" prefWidth="400.0"/>
                </HBox>

                <Button fx:id="simulationStartButton" text="Start" onAction="#onSimulationStartClicked"/>
            </VBox>
        </HBox>
    </center>
</BorderPane>
